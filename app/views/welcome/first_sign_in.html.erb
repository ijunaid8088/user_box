<% content_for :head do %>
  <%= stylesheet_link_tag "views/welcome/first_sign_in.css" %>
  <%= stylesheet_link_tag "views/welcome/welcome.min.css" %>
<% end %>
<section id="overload">
  <div class="row">
    <div class="alert alert-dismissible alert-success">
      <strong>Well done!</strong> You successfully signed in. As this was your first login please reset your password.
    </div>
    <div class="col-lg-4" style="float: none; margin: 0 auto;">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%= current_user.full_name %></h3>
        </div>
        <div class="panel-body">
          <form action="/save_password" method="POST" accept-charset="utf-8">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <div class="form-group has-success">
              <label class="control-label" for="inputSuccess">Password</label>
              <input type="password" class="form-control" id="inputSuccess" name="password">
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-info">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
